{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./typechain-types",
    "typeRoots": ["./node_modules/@typechain", "./node_modules/@types", "./node_modules/@ethers"],
    "types": ["node"]
  },
  "include": ["./scripts", "./test", "./typechain-types"],
  "exclude": ["node_modules"]
}
